<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lenguyenwi.loginregister.Chat">
    <ImageView
        android:id="@+id/profileIcon"
        android:src="@drawable/ic_launcher_person"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/etUsername"
        android:text="Contact Name"
        android:textSize="30sp"
        android:layout_toRightOf="@+id/profileIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etUsernameChat"
        android:text="Chatpartner Name"
        android:textSize="30sp"
        android:layout_below="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etchatcontext"
        android:text="chatcontext"
        android:layout_above="@+id/bSend"
        android:layout_below="@+id/etUsernameChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/bChatLogout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="90dp"
        android:text="LOGOUT"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/bSend"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="90dp"
        android:text="SEND"
        android:layout_height="50dp" />


    <EditText
        android:id="@+id/etEnteredMessage"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/bSend"
        android:hint="Enter a Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
